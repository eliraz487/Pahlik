<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layoutDirection="ltr"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:id="@+id/imageView_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
        <ImageView

            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="center_horizontal"
            android:id="@+id/listImage"
            android:layout_marginStart="10dp"
            android:src="@drawable/malfunction"
            android:scaleType="centerCrop"
         />
            <TextView
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:id="@+id/malfunction_system"
                android:text="משואה"
                android:gravity="center_horizontal"
                android:textColor="@color/purple_700"
                android:textSize="15dp"
                />
        </LinearLayout>
<LinearLayout
    android:id="@+id/layout"
    android:layout_width="210dp"
    android:orientation="vertical"
    android:layout_marginStart="10dp"
    android:layout_marginTop="15dp"
    android:layout_toEndOf="@id/imageView_layout"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="210dp"
            android:layout_height="30dp"
            android:gravity="center_horizontal"
            android:id="@+id/malfunction_type"
            android:text="מפלז לא עובד משרד סמחט"
            android:textColor="@color/purple_700"
            android:textSize="18dp"
            />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/username_item"
        android:text="לירז פנחסי"
        android:gravity="center_horizontal"
        android:textColor="@color/purple_700"
        android:textSize="15dp"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:id="@+id/location_item"
        android:text="משרד שוב"
        android:gravity="center_horizontal"
        android:textColor="@color/purple_700"
        android:textSize="15dp"
        />
</LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ok"
            android:layout_toEndOf="@id/layout"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listTime"
            android:text="27/10/23 20:22"
            android:textSize="16dp"
            android:layout_marginTop="40dp"
            android:textColor="@color/purple_700"/>
            <ImageView
                android:id="@+id/check_image"
                android:layout_width="20dp"
                android:layout_gravity="right"
                android:layout_height="20dp"
                android:backgroundTint="#DA0000"
                android:layout_marginRight="10dp"
                android:background="@drawable/baseline_check_circle_24"
                />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>